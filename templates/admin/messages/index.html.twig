{% extends 'adminbase.html.twig' %}

{% block title %}Mesajlar{% endblock %}

{% block content %}
    <h1>Mesaj Listesi</h1>
    <div class="col-lg-20 mt-10">
        <div class="card">
            <div class="card-body">
                <div class="single-table">
                    <div class="table-responsive">
                        <table class="table table-striped text-center">
                            <thead class="text-uppercase">
                            <tr>
                                <th scope="col">MesajID</th>
                                <th scope="col">Adı Soyadı</th>
                                <th scope="col">Email</th>
                                <th scope="col">Konu</th>
                                <th scope="col">Mesaj</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Comment</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for msj in messages %}
                                <tr>
                                    <td>{{ msj.id }}</td>
                                    <td>{{ msj.name }}</td>
                                    <td>{{ msj.email }}</td>
                                    <td>{{ msj.subject }}</td>
                                    <td>{{ msj.message }}</td>
                                    <td>{{ msj.status }}</td>
                                    <td>{{ msj.comment }}</td>
                                    <td>
                                        <a class="btn btn-success mb-3" href="javascript:openWin('{{ path('admin_messages_show', {'id': msj.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=700,height=400');">Mesaj Oku</a>
                                        <a class="btn btn-danger mb-3" href="{{ path('admin_messages_delete', {'id': msj.id}) }}">Sil</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
