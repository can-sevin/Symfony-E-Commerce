{% extends 'adminbase.html.twig' %}

{% block title %}Orders{% endblock %}

{% block content %}
    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>

            <form action="{{ path('admin_orders_update',{'id':order.id}) }}" method="post">
                <tr>
                    <th>Shipinfo</th>
                    <td><textarea name="shipinfo" cols="100" rows="3">{{ order.shipinfo }}</textarea></td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td><textarea name="note" cols="100" rows="3">{{ order.note }}</textarea></td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td><select name="status">
                            <option>{{ order.status }}</option>
                            <option value="accepted">Onaylandı</option>
                            <option value="inshipping">Dolaşımda</option>
                            <option value="canceled">İptal</option>
                            <option value="completed">Tamamlanan</option>
                        </select> </td>
                    <input type="submit" value="Güncelle">
                </tr>
            </form>
        </tbody>
    </table>


    <a href="{{ path('orders_index') }}">back to list</a>

    <a href="{{ path('orders_edit', {'id': order.id}) }}">edit</a>

    {{ include('orders/_delete_form.html.twig') }}
{% endblock %}
