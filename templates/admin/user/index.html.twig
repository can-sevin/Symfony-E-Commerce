{% extends 'adminbase.html.twig' %}

{% block title %}Üye Listesi{% endblock %}

{% block content %}
    <div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12 mt-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title"><a href="{{ path('admin_user_new') }}" class="btn btn-primary mb-3" disabled="">Üye Ekle</a></h4>
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead class="text-uppercase">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Adı Soyadı</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Adresi</th>
                                    <th scope="col">İli</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Satüsü</th>
                                    <th scope="col">Düzenle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.status }}</td>
                                    <td>{{ user.address }}</td>
                                    <td>{{ user.city }}</td>
                                    <td>{{ user.phone }}</td>
                                    <td>{% for item in user.roles %}
                                    {{ item }}
                                    {% endfor %}
                                    </td>
                                    <td><a href="{{ path('admin_user_edit',{'id':user.id}) }}" class="btn btn-warning mb-3" disabled="">Düzenle</a></td>
                                    <td><a href="{{ path('admin_user_delete',{'id':user.id}) }}" onclick="return confirm('Silinecek emin misiniz?');" class="btn btn-danger mb-3" disabled="">Sil</a></td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}