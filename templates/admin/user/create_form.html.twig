{% extends 'adminbase.html.twig' %}

{% block title %}Üye Ekleme{% endblock %}

{% block content %}
    <div class="main-content-inner">
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Üye Ekleme</h4>
                    <form class="form-horizontal" method="post" enctype="multipart/form-data">
                        <div class="form-group" >
                            <label for="example-text-input" class="col-form-label">Adı Soyadı</label>
                            <input class="form-control" type="text" id="example-text-input" name="name[name]" placeholder="Adı Soyadı">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="name[email]">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Şifre" name="name[password]">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputttPassword1">Telefon</label>
                            <input type="text" value="{{ user.phone }}" class="form-control" id="exampleInputttPassword1" placeholder="Telefon" name="name[phone]">
                        </div>
                        <div class="form-group">
                            <label for="eeexampleInputPassword1">Şehir</label>
                            <input type="text" value="{{ user.city }}" class="form-control" id="eeexampleInputPassword1" placeholder="Şehir" name="name[city]">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Address</label>
                            <textarea class="form-control" id="exampleInputPassword1" name="name[address]" placeholder="Adres">{{ user.address }}</textarea>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Türü</label>
                            <select name="name[roles]" class="custom-select">
                                <option value="ROLE_ADMIN">ROLE_ADMIN</option>
                                <option value="ROLE_USER">ROLE_USER</option>
                                <option value="ROLE_POWER">ROLE_POWER</option>
                                <option value="ROLE_MEMBER">ROLE_MEMBER</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Aktiflik Durumu</label>
                            <select class="custom-select" name="name[status]">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}