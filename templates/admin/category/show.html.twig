{% extends 'adminbase.html.twig' %}

{% block title %}Kategori Detay{% endblock %}

{% block content %}
    <div class="main-content-inner">
        <div class="row">
            <!-- table primary start -->
            <div class="col-lg-10 mt-5">
                <div class="card">
                    <div class="card-body">
                        <a class="btn btn-primary mb-3" href="{{ path('admin_category_new') }}">Kategori Oluştur</a>
                        <h4 class="header-title">Kategori Detay</h4>
                        <div class="single-table">
                            <div class="table-responsive">
                                <table class="table text-center">
                                    <tbody>
                                    <tr class="text-white">
                                        <th>Id</th>
                                        <td>{{ category.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Parent_id</th>
                                        <td>{{ category.parentId }}</td>
                                    </tr>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ category.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ category.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Keywords</th>
                                        <td>{{ category.keywords }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- table primary end -->
        </div>
        <a class="btn btn-success mb-3" href="{{ path('admin_category_index') }}">Listeye Geri Dön</a>
        <a class="btn btn-warning mb-3"href="{{ path('admin_category_edit', {'id': category.id,'pid':category.parentid}) }}">Düzenle</a>
    </div>
    {{ include('admin/category/_delete_form.html.twig') }}
{% endblock %}
